<% content_for :header do %>
<!-- Modern Hero Section -->
<section class="hero is-fullheight-with-navbar" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); position: relative; overflow: hidden;">
  <!-- Background Pattern -->
  <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; opacity: 0.1; background-image: url('data:image/svg+xml,<svg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="%23ffffff" fill-opacity="0.4"><circle cx="30" cy="30" r="2"/></g></g></svg>');"></div>

  <div class="hero-body">
    <div class="container">
      <div class="columns is-vcentered">
        <div class="column is-6">
          <div class="content">
            <h1 class="title is-1 has-text-white" style="font-weight: 700; line-height: 1.2; margin-bottom: 1.5rem;">
              Discover Amazing Products
            </h1>
            <p class="subtitle is-4 has-text-white-ter" style="font-weight: 400; line-height: 1.6; margin-bottom: 2rem;">
              Your premium marketplace for quality products, exclusive deals, and seamless shopping experience
            </p>

            <!-- CTA Buttons -->
            <div class="buttons is-flex is-flex-wrap-wrap" style="gap: 1rem;">
              <% unless user_signed_in? %>
                <%= link_to new_user_registration_path, class: "button is-white is-large", style: "border-radius: 50px; padding: 1.25rem 2rem; font-weight: 600; box-shadow: 0 8px 25px rgba(0,0,0,0.15); transition: all 0.3s ease;" do %>
                  <span class="icon">
                    <i class="fas fa-user-plus"></i>
                  </span>
                  <span>Get Started</span>
                <% end %>

                <%= link_to ads_path, class: "button is-light is-large is-outlined", style: "border-radius: 50px; padding: 1.25rem 2rem; font-weight: 600; border: 2px solid rgba(255,255,255,0.8); color: white; transition: all 0.3s ease;" do %>
                  <span class="icon">
                    <i class="fas fa-search"></i>
                  </span>
                  <span>Browse Ads</span>
                <% end %>
              <% else %>
                <%= link_to new_product_path, class: "button is-white is-large", style: "border-radius: 50px; padding: 1.25rem 2rem; font-weight: 600; box-shadow: 0 8px 25px rgba(0,0,0,0.15); transition: all 0.3s ease;" do %>
                  <span class="icon">
                    <i class="fas fa-plus"></i>
                  </span>
                  <span>Sell Product</span>
                <% end %>

                <%= link_to ads_path, class: "button is-light is-large is-outlined", style: "border-radius: 50px; padding: 1.25rem 2rem; font-weight: 600; border: 2px solid rgba(255,255,255,0.8); color: white; transition: all 0.3s ease;" do %>
                  <span class="icon">
                    <i class="fas fa-bullhorn"></i>
                  </span>
                  <span>Browse Ads</span>
                <% end %>
              <% end %>
            </div>

            <!-- Stats -->
            <div class="columns is-mobile" style="margin-top: 3rem;">
              <div class="column is-4">
                <div class="has-text-centered">
                  <p class="title is-3 has-text-white" style="margin-bottom: 0.5rem;"><%= @products.count %>+</p>
                  <p class="has-text-white-ter">Products</p>
                </div>
              </div>
              <div class="column is-4">
                <div class="has-text-centered">
                  <p class="title is-3 has-text-white" style="margin-bottom: 0.5rem;"><%= User.count %>+</p>
                  <p class="has-text-white-ter">Users</p>
                </div>
              </div>
              <div class="column is-4">
                <div class="has-text-centered">
                  <p class="title is-3 has-text-white" style="margin-bottom: 0.5rem;">4.9</p>
                  <p class="has-text-white-ter">Rating</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="column is-6">
          <div class="has-text-centered" style="position: relative;">
            <!-- Modern Illustration -->
            <div style="background: rgba(255,255,255,0.1); border-radius: 20px; padding: 3rem; backdrop-filter: blur(10px); border: 1px solid rgba(255,255,255,0.2);">
              <i class="fas fa-shopping-cart" style="font-size: 8rem; color: rgba(255,255,255,0.9); margin-bottom: 1rem;"></i>
              <p class="has-text-white-ter is-size-5">Start your shopping journey today</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="has-text-centered" style="position: absolute; bottom: 2rem; left: 50%; transform: translateX(-50%);">
    <i class="fas fa-chevron-down has-text-white-ter" style="animation: bounce 2s infinite;"></i>
  </div>
</section>

<style>
@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0) translateX(-50%); }
  40% { transform: translateY(-10px) translateX(-50%); }
  60% { transform: translateY(-5px) translateX(-50%); }
}

.button:hover {
  transform: translateY(-2px);
  box-shadow: 0 12px 35px rgba(0,0,0,0.2) !important;
}
</style>
<% end %>

<!-- Featured Ads Section -->
<% if @ads.any? %>
  <section class="section" style="background: #f8fafc; padding: 5rem 0;">
    <div class="container">
      <div class="has-text-centered" style="margin-bottom: 4rem;">
        <h2 class="title is-2" style="color: #2d3748; font-weight: 700; margin-bottom: 1rem;">Featured Ads</h2>
        <p class="subtitle is-5" style="color: #718096; max-width: 600px; margin: 0 auto;">Discover amazing products from our community</p>
      </div>

      <div class="ads-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; margin: 0; padding: 0 1rem;">
        <% @ads.limit(8).each do |ad| %>
          <div class="ad-card" style="background: white; border-radius: 20px; overflow: hidden; box-shadow: 0 4px 25px rgba(0,0,0,0.08); transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1); border: 1px solid rgba(0,0,0,0.05); display: flex; flex-direction: column; height: 420px; position: relative;">

            <!-- Featured Badge Ribbon -->
            <div style="position: absolute; top: 15px; right: -10px; background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); color: white; padding: 0.5rem 1.5rem; font-size: 0.8rem; font-weight: 700; text-transform: uppercase; letter-spacing: 1px; z-index: 10; clip-path: polygon(0 0, calc(100% - 10px) 0, 100% 50%, calc(100% - 10px) 100%, 0 100%); box-shadow: 0 2px 10px rgba(245, 158, 11, 0.3);">
              FEATURED
            </div>

            <!-- Ad Image Container -->
            <div class="ad-image-container" style="position: relative; height: 220px; overflow: hidden; background: #f8fafc;">
              <% if ad.product.image.present? %>
                <%= link_to ad, style: "display: block; height: 100%;" do %>
                  <%= image_tag(ad.product.image_url(:thumb),
                      alt: ad.title,
                      style: "width: 100%; height: 100%; object-fit: cover; transition: transform 0.4s ease;",
                      class: "ad-image") %>
                <% end %>
              <% else %>
                <%= link_to ad, style: "display: block; height: 100%;" do %>
                  <div style="height: 100%; background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%); display: flex; flex-direction: column; align-items: center; justify-content: center; color: #92400e;">
                    <i class="fas fa-bullhorn" style="font-size: 3rem; margin-bottom: 0.5rem; opacity: 0.8;"></i>
                    <span style="font-size: 0.9rem; font-weight: 600;">Featured Advertisement</span>
                  </div>
                <% end %>
              <% end %>

              <!-- Price Overlay -->
              <div style="position: absolute; bottom: 1rem; right: 1rem; background: rgba(0,0,0,0.8); color: white; padding: 0.5rem 1rem; border-radius: 20px; font-weight: 700; font-size: 1.1rem; backdrop-filter: blur(10px);">
                <%= number_to_currency(ad.display_price) %>
              </div>
            </div>

            <!-- Ad Content -->
            <div class="ad-content" style="padding: 1.5rem; display: flex; flex-direction: column; flex-grow: 1; justify-content: space-between;">
              <div>
                <!-- Ad Title -->
                <h3 class="ad-title" style="font-size: 1.1rem; font-weight: 600; color: #1a202c; margin-bottom: 0.5rem; line-height: 1.4; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                  <%= link_to ad.title, ad, style: "color: inherit; text-decoration: none;" %>
                </h3>

                <!-- Ad Info -->
                <p style="color: #718096; font-size: 0.9rem; margin-bottom: 1rem; display: flex; align-items: center;">
                  <i class="fas fa-user-circle" style="margin-right: 0.5rem; color: #cbd5e0;"></i>
                  <span>by <%= ad.user.name %></span>
                </p>

                <!-- Ad Stats -->
                <div style="display: flex; gap: 1rem; font-size: 0.8rem; color: #a0aec0; margin-bottom: 1rem;">
                  <span style="display: flex; align-items: center;"><i class="fas fa-eye" style="margin-right: 0.3rem;"></i><%= ad.views_count %></span>
                  <span style="display: flex; align-items: center;"><i class="fas fa-clock" style="margin-right: 0.3rem;"></i><%= time_ago_in_words(ad.created_at) %></span>
                </div>
              </div>

              <!-- View Ad Button -->
              <div style="margin-top: auto;">
                <%= link_to ad,
                    class: "view-ad-btn",
                    style: "width: 100%; background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); color: white; border: none; border-radius: 12px; padding: 0.8rem 1.5rem; font-size: 0.9rem; font-weight: 600; text-decoration: none; transition: all 0.3s ease; box-shadow: 0 4px 15px rgba(245, 158, 11, 0.3); display: flex; align-items: center; justify-content: center; gap: 0.5rem;" do %>
                  <i class="fas fa-eye"></i>
                  <span>View Advertisement</span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="has-text-centered" style="margin-top: 4rem;">
        <%= link_to ads_path, class: "button is-primary is-large", style: "border-radius: 50px; padding: 1rem 2.5rem; font-weight: 600; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3); transition: all 0.3s ease;" do %>
          <span class="icon">
            <i class="fas fa-arrow-right"></i>
          </span>
          <span>View All Ads</span>
        <% end %>
      </div>
    </div>
  </section>
<% else %>
  <section class="section" style="background: #f8fafc; padding: 5rem 0;">
    <div class="container">
      <div class="has-text-centered">
        <div style="background: white; border-radius: 20px; padding: 4rem 2rem; box-shadow: 0 4px 20px rgba(0,0,0,0.08); max-width: 600px; margin: 0 auto;">
          <i class="fas fa-bullhorn" style="font-size: 4rem; color: #cbd5e0; margin-bottom: 2rem;"></i>
          <h2 class="title is-2" style="color: #2d3748; margin-bottom: 1rem;">No Ads Yet</h2>
          <p class="subtitle is-5" style="color: #718096; margin-bottom: 2rem;">Be the first to create an amazing ad and showcase your products!</p>
          <% if user_signed_in? %>
            <%= link_to new_ad_path, class: "button is-primary is-large", style: "border-radius: 50px; padding: 1rem 2.5rem; font-weight: 600; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);" do %>
              <span class="icon">
                <i class="fas fa-plus"></i>
              </span>
              <span>Create First Ad</span>
            <% end %>
          <% else %>
            <%= link_to new_user_registration_path, class: "button is-primary is-large", style: "border-radius: 50px; padding: 1rem 2.5rem; font-weight: 600; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);" do %>
              <span class="icon">
                <i class="fas fa-user-plus"></i>
              </span>
              <span>Sign Up to Create Ads</span>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </section>
<% end %>

<section class="section" style="background: white; padding: 5rem 0;">
  <div class="container">
    <div class="has-text-centered" style="margin-bottom: 4rem;">
      <h2 class="title is-2" style="color: #2d3748; font-weight: 700; margin-bottom: 1rem;">Latest Products</h2>
      <p class="subtitle is-5" style="color: #718096; max-width: 600px; margin: 0 auto;">Browse our newest product listings</p>
    </div>

    <% if @products.any? %>
      <div class="product-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; margin: 0; padding: 0 1rem;">
        <% @products.limit(8).each do |product| %>
          <div class="product-card" style="background: white; border-radius: 20px; overflow: hidden; box-shadow: 0 4px 25px rgba(0,0,0,0.08); transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1); border: 1px solid rgba(0,0,0,0.05); display: flex; flex-direction: column; height: 420px;">

            <!-- Product Image Container -->
            <div class="product-image-container" style="position: relative; height: 220px; overflow: hidden; background: #f8fafc;">
              <% if product.image.present? %>
                <%= link_to product, style: "display: block; height: 100%;" do %>
                  <%= image_tag(product.image_url(:thumb),
                      alt: product.title,
                      style: "width: 100%; height: 100%; object-fit: cover; transition: transform 0.4s ease;",
                      class: "product-image") %>
                <% end %>
              <% else %>
                <%= link_to product, style: "display: block; height: 100%;" do %>
                  <div style="height: 100%; background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%); display: flex; flex-direction: column; align-items: center; justify-content: center; color: #94a3b8;">
                    <i class="fas fa-image" style="font-size: 3rem; margin-bottom: 0.5rem; opacity: 0.6;"></i>
                    <span style="font-size: 0.9rem; font-weight: 500;">No Image Available</span>
                  </div>
                <% end %>
              <% end %>

              <!-- Condition Badge -->
              <% if product.condition? %>
                <div class="condition-badge" style="position: absolute; top: 1rem; left: 1rem; background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.8rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; box-shadow: 0 2px 10px rgba(16, 185, 129, 0.3);">
                  <%= product.condition.titleize %>
                </div>
              <% end %>
            </div>

            <!-- Product Content -->
            <div class="product-content" style="padding: 1.5rem; display: flex; flex-direction: column; flex-grow: 1; justify-content: space-between;">
              <div>
                <!-- Product Title -->
                <h3 class="product-title" style="font-size: 1.1rem; font-weight: 600; color: #1a202c; margin-bottom: 0.5rem; line-height: 1.4; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                  <%= link_to product.title, product, style: "color: inherit; text-decoration: none;" %>
                </h3>

                <!-- Seller Info -->
                <p style="color: #718096; font-size: 0.9rem; margin-bottom: 1rem; display: flex; align-items: center;">
                  <i class="fas fa-user-circle" style="margin-right: 0.5rem; color: #cbd5e0;"></i>
                  <span>by <%= product_author(product) %></span>
                </p>
              </div>

              <!-- Price and Actions -->
              <div style="margin-top: auto;">
                <!-- Price -->
                <div class="product-price" style="font-size: 1.5rem; font-weight: 700; color: #667eea; margin-bottom: 1rem; text-align: center;">
                  <%= number_to_currency(product.price) %>
                </div>

                <!-- Action Buttons -->
                <div class="product-actions" style="display: flex; justify-content: center; gap: 0.5rem;">
                  <% if user_signed_in? && current_user == product.user %>
                    <!-- User's own product - show edit/delete options -->
                    <%= link_to edit_product_path(product),
                        class: "action-btn edit-btn",
                        style: "background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%); color: white; border: none; border-radius: 10px; padding: 0.6rem 1.2rem; font-size: 0.85rem; font-weight: 500; text-decoration: none; transition: all 0.3s ease; display: flex; align-items: center; gap: 0.5rem;" do %>
                      <i class="fas fa-edit"></i>
                      <span>Edit</span>
                    <% end %>
                    <%= link_to product_path(product), method: :delete,
                               confirm: "Are you sure you want to delete this product?",
                               class: "action-btn delete-btn",
                               style: "background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%); color: white; border: none; border-radius: 10px; padding: 0.6rem 1.2rem; font-size: 0.85rem; font-weight: 500; text-decoration: none; transition: all 0.3s ease; display: flex; align-items: center; gap: 0.5rem;" do %>
                      <i class="fas fa-trash"></i>
                      <span>Delete</span>
                    <% end %>
                  <% else %>
                    <!-- Other user's product - show add to cart -->
                    <%= form_with url: cart_add_item_path, method: :post, local: true, style: "margin: 0; width: 100%;" do |form| %>
                      <%= form.hidden_field :product_id, value: product.id %>
                      <%= form.submit "Add to Cart",
                          class: "cart-btn",
                          style: "width: 100%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; border-radius: 12px; padding: 0.8rem 1.5rem; font-size: 0.9rem; font-weight: 600; cursor: pointer; transition: all 0.3s ease; box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);" %>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="has-text-centered" style="margin-top: 4rem;">
        <%= link_to products_path, class: "button is-primary is-large", style: "border-radius: 50px; padding: 1rem 2.5rem; font-weight: 600; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3); transition: all 0.3s ease;" do %>
          <span class="icon">
            <i class="fas fa-arrow-right"></i>
          </span>
          <span>View All Products</span>
        <% end %>
      </div>
    <% else %>
      <div class="has-text-centered">
        <div style="background: #f8fafc; border-radius: 20px; padding: 4rem 2rem; max-width: 600px; margin: 0 auto;">
          <i class="fas fa-box-open" style="font-size: 4rem; color: #cbd5e0; margin-bottom: 2rem;"></i>
          <h3 class="title is-3" style="color: #2d3748; margin-bottom: 1rem;">No Products Yet</h3>
          <% if user_signed_in? %>
            <p class="subtitle is-5" style="color: #718096; margin-bottom: 2rem;">Be the first to add a product and start selling!</p>
            <%= link_to new_product_path, class: "button is-primary is-large", style: "border-radius: 50px; padding: 1rem 2.5rem; font-weight: 600; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);" do %>
              <span class="icon">
                <i class="fas fa-plus"></i>
              </span>
              <span>Add Product</span>
            <% end %>
          <% else %>
            <p class="subtitle is-5" style="color: #718096; margin-bottom: 2rem;">Sign up to start selling your products!</p>
            <%= link_to new_user_registration_path, class: "button is-primary is-large", style: "border-radius: 50px; padding: 1rem 2.5rem; font-weight: 600; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);" do %>
              <span class="icon">
                <i class="fas fa-user-plus"></i>
              </span>
              <span>Sign Up</span>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</section>

